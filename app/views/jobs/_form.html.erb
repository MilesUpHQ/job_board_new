


     <%= simple_form_for @job, html: { multipart: true } do |f| %>
      <%= f.error_notification %>
     <h4 >First ,tell us about the position</h4><br>
      <div class="field">
        <div class="control">
        
        <%= f.input :title, label:'Headline', required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Frontend Developer" %>
        </div>
      </div>

      


    <div class="columns">
      <div class="field column is-4">
        <div class="control">
          <label class="label">Job Type:</label>
          <div class="control has-icons-left">
            <span class="select">
              <%= f.input_field :job_type, collection: Job::JOB_TYPES, prompt: "Select a job type" %>
            </span>
            <span class="icon is-small is-left">
              <i class="fa fa-briefcase"></i>
            </span>
          </div>
        </div>
      </div>
    </div>  
      
      <div class="field">
      <div class="columns">
      <div class="field column is-4">
        <div class="control">
          <label class="label">Job Category:</label>
          <div class="control has-icons-left">
            <span class="select">
              <%= f.input_field :category ,collection: Job::CATEGORY, prompt: "Select a job category" %>
            </span>
            <span class="icon is-small is-left">
              <i class="fa fa-briefcase"></i>
            </span>
          </div>
        </div>
      </div>
      </div>

        <div class="field">
        <div class="column">
          <div class="control">
         <label class="label">Location :</label>
            <%= f.select :location, ["Ariyalur","Chennai","Coimbatore","Cuddalore","Dharmapuri","Dindigul","Erode","Kanchipuram","Kanyakumari","Karur","Krishnagiri","Madurai","Nagapattinam","Namakkal","Nilgiris","Perambalur","Pudukkottai","Ramanathapuram","Salem","Sivaganga","Thanjavur","Theni","Thoothukudi","Tiruchirappalli","Tirunelveli","Tiruppur","Tiruvallur","Tiruvannamalai","Tiruvarur","Vellore","Viluppuram","Virudhunagar"],require: true, input_html: { class: "dropdown" }, wrapper: false, label_html: { class: "label" }   %>
          </div>
        </div>


        <div class="field">
          <div class="control">
            <label for="job[remoke_ok]">
              <%= f.input :remoke_ok, required: false, input_html: { class: "checkbox"}, wrapper: false, label: false %>
              Remote work
            </label><i class="fa fa-wifi"></i>
          </div>
        </div>
      </div>
    

      <div class="field">
        <div class="control">
          <%= f.input :description,as: :rich_text_area, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>
      
      <div class="field">
        <div class="control">
          <%= f.input :perks,required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>

         <div class="field">
        <div class="control">

      <p>
    <b>What does this job pay?</b><br>
    <%= f.radio_button :pay, 'Nothing' %> Nothing
    <%= f.radio_button :pay, 'One-time' %>  One-time 
    <%= f.radio_button :pay, 'Recuring' %> Recuring
</p>
</div>
</div>

   <div class="field">
        <div class="control">
        
        <%= f.input :apply_url, label:'What should a candiadate submit when applying for this job?', required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>


   <br><h4>Now,tell us about your organisation</h4>
    

      <div class="field">
        <div class="control">
        
        <%= f.input :job_author, label:'Employer Name', required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>

      <div class="field column">
        <div class="control">
          <%= f.input :url, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "Company Website" %>
        </div>
      </div>

       <div class="field">
        <div class="control">
        
        <%= f.input :email, label:'Email', required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>
       <div class="field">
        <div class="control">
        
        <%= f.input :twitter, label:'Twitter', required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>

    </div>

    <div class="columns">
      <div class="field column is-4">
        <div class="control">
          <label class="label">Logo Image</label>
          <div class="file">
            <span class="file-icon"><i class="fa fa-upload"></i></span>
               <%= f.file_field :avatar, as: :file, required: false, input_html: { class:"file-input job-avatar" }, label: false, wrapper: false %>
                               </span>
            </label>
          </div>
        </div>
      </div>
      <div class="column">
        <output id="list"></output>
      </div>
    </div>

   <%= f.button :submit, class: "button is-primary is-large is-rounded mv4" %>
<% end %>
