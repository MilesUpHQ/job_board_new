
<%= form_with model: [ @job, @job.applies.build ] do |f| %>

  <div class="column">
    <div class="field">
        <div class="control">
        <%= f.label "name", :class=>"lable" %>
        <%= f.text_field :name, :class=>"input" %>
        </div>
      </div>

        <%# <div class="field">
          <div class="control">
            <%= f.input :address, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: 'Enter the proper address' %>
          <%# </div>
        </div> %>

    <div class="field">
        <div class="control">
        <%= f.label "phone number", :class=>"lable" %>
        <%= f.text_field :phonenumber, :class=>"input" %>
        </div>

    <div class="field">
        <div class="control">
        <%= f.label "Email", :class=>"lable" %>
        <%= f.text_field :email, :class=>"input" %>
        </div>

  <div class="columns">
      <div class="field column is-4">
        <div class="control">
          <label class="label">upload resume</label>
          <div class="file">
            <label class="file-label">
                <span class="file-cta">
                  <span class="file-icon"><i class="fa fa-upload"></i></span>
                  <span class="file-label">Choose a fileâ€¦</span>
                  <%= f.file_field :resume, :class=>"file-input job-avatar" %>
                </span>
            </label>
          </div>
        </div>
      </div>
      <div class="column">
        <output id="list"></output>
      </div>
    </div>

    <%= f.submit %>
  </div>
<% end %>


