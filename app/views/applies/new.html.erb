
<%= simple_form_for @apply, html: { multipart: true } do |f| %>
  

  <div class="field">
        <div class="control">
        <%= f.input :name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "priya" %>
        </div>
      </div>
  <div class="column">

        <div class="field">
          <div class="control">
            <%= f.input :address, require: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: 'Enter the proper address' %>
          </div>
        </div>

    <div class="field">
        <div class="control">
        <%= f.input :phonenumber, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "1234567890" %>
        </div>

    <div class="field">
        <div class="control">
        <%= f.input :email, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "rrr@gmail.com" %>
        </div>        
  
  <div class="columns">
      <div class="field column is-4">
        <div class="control">
          <label class="label">upload resume</label>
          <div class="file">
            <label class="file-label">
              <%= f.file_field :resume, as: :file, required: false, input_html: { class:"file-input job-avatar" }, label: false, wrapper: false %>
                <span class="file-cta">
                  <span class="file-icon"><i class="fa fa-upload"></i></span>
                  <span class="file-label">Choose a fileâ€¦</span>
                </span>
            </label>
          </div>
        </div>
      </div>
      <div class="column">
        <output id="list"></output>
      </div>
    </div>
    
    <%= f.submit %>
  </div>
<% end %>


